{
  "name": "@family-hub/root",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "pnpm -r build",
    "typecheck": "pnpm -r typecheck",
    "lint": "pnpm -r lint",
    "format": "pnpm -r format",
    "test": "pnpm -r test",
    "dev:api": "pnpm --filter @family-hub/api start:dev",
    "dev:worker": "pnpm --filter @family-hub/worker start:dev",
    "dev:web": "pnpm --filter @family-hub/web dev",
    "dev:ai-gateway": "pnpm --filter @family-hub/ai-gateway start:dev",
    "build:api": "pnpm --filter @family-hub/api build",
    "build:worker": "pnpm --filter @family-hub/worker build",
    "build:web": "pnpm --filter @family-hub/web build",
    "build:ai-gateway": "pnpm --filter @family-hub/ai-gateway build",
    "test:schemas": "pnpm --filter @family-hub/schemas test",
    "typecheck:schemas": "pnpm --filter @family-hub/schemas typecheck",
    "compose:up": "docker compose --env-file env/dev.env -f infra/compose/docker-compose.yml -f infra/compose/docker-compose.dev.yml up -d",
    "compose:down": "docker compose --env-file env/dev.env -f infra/compose/docker-compose.yml -f infra/compose/docker-compose.dev.yml down"
  },
  "devDependencies": {
    "typescript": "5.4.5",
    "eslint": "8.57.0",
    "prettier": "3.2.5",
    "@typescript-eslint/parser": "7.3.1",
    "@typescript-eslint/eslint-plugin": "7.3.1",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.1.3",
    "jest": "29.7.0",
    "ts-jest": "29.1.2",
    "@types/jest": "29.5.12",
    "@types/node": "20.11.30"
  },
  "pnpm": {
    "overrides": {
      "typescript": "5.4.5",
      "eslint": "8.57.0",
      "prettier": "3.2.5",
      "@typescript-eslint/parser": "7.3.1",
      "@typescript-eslint/eslint-plugin": "7.3.1",
      "eslint-config-prettier": "9.1.0",
      "eslint-plugin-prettier": "5.1.3",
      "jest": "29.7.0",
      "ts-jest": "29.1.2",
      "@types/jest": "29.5.12",
      "@types/node": "20.11.30"
    }
  }
}
